      <Label fx:id="changePasswordLabel" layoutX="189.0" layoutY="47.0" text="Change Password" />
      <PasswordField fx:id="currentPasswordTextField" layoutX="142.0" layoutY="100.0" prefHeight="25.0" prefWidth="188.0" promptText="Current Password" />
      <PasswordField fx:id="newPasswordTextField" layoutX="142.0" layoutY="158.0" prefHeight="25.0" prefWidth="188.0" promptText="New Password" />
      <PasswordField fx:id="confirmNewPasswordTextField" layoutX="142.0" layoutY="217.0" prefHeight="25.0" prefWidth="188.0" promptText="Confirm New Password" />
   </children>
</AnchorPane>
