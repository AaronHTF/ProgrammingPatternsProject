<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="341.0" prefWidth="472.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.programmingpatternsproject.ChangePasswordViewController">
   <children>
      <Button fx:id="cancelButton" layoutX="14.0" layoutY="302.0" mnemonicParsing="false" onAction="#handleCancelButtonAction" prefHeight="25.0" prefWidth="100.0" text="Cancel" />
      <Button fx:id="confirmButton" layoutX="358.0" layoutY="302.0" mnemonicParsing="false" onAction="#handleConfirmButtonAction" prefHeight="25.0" prefWidth="100.0" text="Confirm" />
      <Label fx:id="changePasswordLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="78.0" layoutY="27.0" prefHeight="41.0" prefWidth="317.0" text="Change Password">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font></Label>
      <PasswordField fx:id="currentPasswordTextField" layoutX="114.0" layoutY="100.0" prefHeight="25.0" prefWidth="231.0" promptText="Current Password" />
      <PasswordField fx:id="newPasswordTextField" layoutX="114.0" layoutY="158.0" prefHeight="25.0" prefWidth="231.0" promptText="New Password" />
      <PasswordField fx:id="confirmNewPasswordTextField" layoutX="115.0" layoutY="217.0" prefHeight="25.0" prefWidth="231.0" promptText="Confirm New Password" />
   </children>
</AnchorPane>
